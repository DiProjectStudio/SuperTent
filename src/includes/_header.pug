block header
    header#header.header
        .container
            .header__inner
                .header__top
                    a(href='/').header__top-logo.logo
                        span super
                        | tent
                    .header__top-contacts
                        .contacts__text
                            p Всегда на связи!
                            p Работаем без выходных
                        .contacts__social-items
                            a(href='javascript:void(0)').social-item.icon-wrapper
                                include ../assets/images/icon_whatsapp.svg
                            a(href='javascript:void(0)').social-item.icon-wrapper
                                include ../assets/images/icon_telegram.svg
                    .header__top-reviews
                        .reviews__text Отзывы<span>&nbsp;о нас </span>:
                        .reviews__company-items
                            a(href='javascript:void(0)').company-item.icon-wrapper
                                include ../assets/images/icon_google.svg
                            a(href='javascript:void(0)').company-item.icon-wrapper
                                include ../assets/images/icon_double-gis.svg
                            a(href='javascript:void(0)').company-item.icon-wrapper
                                include ../assets/images/icon_yandex.svg
                    .header__top-phone.phone
                        a(href='tel:79777775566') +7(977)-777-55-66
                        p Казань и респ. Татарстан
                    .header__top-request
                        a(href='javascript:void(0)' data-fancybox data-src='#popup-request').btn.btn--transparent Оставить заявку
                .header__bottom
                    .header__bottom-catalog-btn
                        .btn.btn--default#catalogToggleBtn
                            span Каталог
                            include ../assets/images/icon_burger.svg
                        include ../components/_catalog
                    .header__bottom-nav
                        nav
                            ul
                                li
                                    a(href='categories.html').dropdown Шатры
                                    .dropdown__items
                                        ul
                                            each dropdownItem in dropdownListItems.tents
                                                li
                                                    a(href='javascript:void(0)')= dropdownItem.title
                                li
                                    a(href='javascript:void(0)').dropdown Мебель
                                    .dropdown__items
                                        ul
                                            each dropdownItem in dropdownListItems.furniture
                                                li
                                                    a(href='javascript:void(0)')= dropdownItem.title

                                li
                                    a(href='javascript:void(0)').dropdown Оборудование
                                    .dropdown__items
                                        ul
                                            each dropdownItem in dropdownListItems.equipment
                                                li
                                                    a(href='javascript:void(0)')= dropdownItem.title
                                li
                                    a(href='javascript:void(0)') Кейтеринг
                    .header__bottom-search
                        input(type='search' placeholder='Поиск по сайту')
                        .icon__default.search__icon
                            include ../assets/images/icon_search.svg
                        a(href='javascript:void(0)').icon__focused.search__icon
                            include ../assets/images/icon_search--white.svg
                    .header__bottom-works Наши работы


