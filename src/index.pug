                .about__image
                    +img('about.jpg')

    section.tents
        .container
            .tents__inner
                .tents__top.section-top
                    .tents__title.section-title ШАТРЫ
                    a(href='javascript:void(0)').link все виды шатров
                .tents__grid.section-grid
                    -
                        var tentCategoryItems = [
                            {title: 'Арочные'},
                            {title: 'Быстросборные'},
                            {title: 'Большие'},
                            {title: 'Деревянные'},
                            {title: 'Сферические'},
                            {title: 'Павильоны'},
                        ]

                    each tentCategoryItem, index in tentCategoryItems
                        +category-item('tents', tentCategoryItem.title, index)



    section.advantages
        .advantages__inner
            .advantages__text Преимущества работы с нами
            .advantages__image
                picture
                    source(srcset="assets/images/advantages_1920.jpg", media="(min-width: 1600px)")
                    source(srcset="assets/images/advantages_1200.jpg", media="(min-width: 1200px)")
                    +img('advantages.jpg')
            .advantages__icon-items
                .icon-item.active(data-tab='speed')
                    +img('icon_plus.svg')
                .icon-item(data-tab='experience')
                    +img('icon_plus.svg')
                .icon-item(data-tab='reliability')
                    +img('icon_plus.svg')
                .icon-item(data-tab='quality')
                    +img('icon_plus.svg')
        .advantages__card-items
            .card-item.active#speed
                .card-item__title 1/4 СКОРОСТЬ
                .card-item__description Принимаем заказы в сжатые сроки и реализовываем их на высоком уровне
            .card-item#experience
                .card-item__title 2/4 ОПЫТ
                .card-item__description Штатные бригады состоят из профессионалов своего дела за плечами которых с десяток площадок различной сложности
            .card-item#reliability
                .card-item__title 3/4 НАДЕЖНОСТЬ
                .card-item__description Мы ценим доверие и время наших клиентов
            .card-item#quality
                .card-item__title 4/4 КАЧЕСТВО
                .card-item__description Мы тщательно следим за состоянием наших конструкций и оборудования

    section.furniture
        .container
            .furniture__inner
                .furniture__top.section-top
                    .furniture__title.section-title МЕБЕЛЬ
                    a(href='javascript:void(0)').link все виды мебели
                .furniture__grid.section-grid
                    -
                        var furnitureCategoryItems = [
                            {title: 'Диваны'},
                            {title: 'Стулья'},
                            {title: 'Столы'},
                            {title: 'Кресла'},
                            {title: 'Уличная мебель'},
                            {title: 'Столы из ротанга'},
                        ]

                    each furnitureCategoryItem, index in furnitureCategoryItems
                        +category-item('furniture', furnitureCategoryItem.title, index)
    section.scenes
        .container
            .scenes__inner
                .scenes__title.section-title СЦЕНЫ И ПОДИУМЫ
                .scenes__grid.section-grid
                    -
                        var scenesCategoryItems = [
                            {title: 'Двускатная сцена'},
                            {title: 'Односкатная сцена'},
                            {title: 'Подиум со ступенями'},
                            {title: 'Подиум'},
                        ]

                    each scenesCategoryItem, index in scenesCategoryItems
                        +category-item('scenes', scenesCategoryItem.title, index)
    section.equipment
        .container
            .equipment__inner
                .equipment__top
                    .equipment__title.section-title ОБОРУДОВАНИЕ
                .equipment__grid.section-grid
                    -
                        var equipmentCategoryItems = [
                            {title: 'Экраны и видео'},
                            {title: 'Звуковое оборудование'},
                            {title: 'Световое оборудование'},
                            {title: 'Техническое оборудование'},
                        ];

                    each equipmentCategoryItem, index in equipmentCategoryItems
                        +category-item('equipment', equipmentCategoryItem.title, index)

    section.catering
        .container
            .catering__inner
                .catering__top.section-top
                    .catering__title.section-title кейтеринг для вашего мероприятия
                    .swiper-arrows
                        .swiper-arrow-prev
                            include assets/images/icon_arrow-left.svg
                        .swiper-arrow-next
                            include assets/images/icon_arrow-right.svg
                .catering__content
                    .catering__text
                        p Вы можете заказать полную организацию и проведение мероприятия, которая включает в себя дизайн, флористическое оформление и ресторанное обслуживание с сервировкой столов и официантами
                        ul.custom-list
                            li разнообразие блюд любой кухни мира с учетом предпочтений и возможных пищевых ограничений.
                            li есть мечта провести мероприятие в особенном месте? Организуем его в любой точке мира и локации.
                        .catering__buttons
                            a(href='javascript:void(0)').btn.btn--default Оставить заявку
                            a(href='javascript:void(0)').btn.btn--transparent Подробнее
                    .catering__image-slider.swiper
                        .swiper-wrapper
                            .swiper-slide
                                +img('catering-1.jpg')
                            .swiper-slide
                                +img('catering-2.jpg')
                            .swiper-slide
                                +img('catering-3.jpg')

    section.works
