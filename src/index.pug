            .works__inner
                .works__top.section-top
                    .works__title.section-title Наши работы
                    a(href='javascript:void(0)').link посмотреть все проекты
                .works__outer-slider.swiper
                    .swiper-arrows
                        .swiper-arrow-prev
                            include assets/images/icon_arrow-left.svg
                        .swiper-arrow-next
                            include assets/images/icon_arrow-right.svg
                    .works__items.swiper-wrapper
                        .works__item.swiper-slide
                            .works__item-title Мероприятие 1
                            .works__item-content
                                .works__item-content-images
                                    .swiper-arrows
                                        .swiper-arrow-prev
                                            include assets/images/icon_arrow-triangle-left.svg
                                        .swiper-arrow-next
                                            include assets/images/icon_arrow-triangle-right.svg
                                    .main-slider.swiper
                                        .swiper-wrapper
                                            .swiper-slide(data-fancybox='gallery' data-src='assets/images/works-1.jpg')
                                                +img('works-1.jpg')
                                            .swiper-slide(data-fancybox='gallery' data-src='assets/images/works-2.jpg')
                                                +img('works-2.jpg')
                                            .swiper-slide(data-fancybox='gallery' data-src='assets/images/works-3.jpg')
                                                +img('works-3.jpg')
                                            .swiper-slide(data-fancybox='gallery' data-src='assets/images/works-4.jpg')
                                                +img('works-4.jpg')
                                    .thumbs-slider.swiper
                                        .swiper-wrapper
                                            .swiper-slide
                                                +img('works-1.jpg')
                                            .swiper-slide
                                                +img('works-2.jpg')
                                            .swiper-slide
                                                +img('works-3.jpg')
                                            .swiper-slide
